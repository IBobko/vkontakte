<?xml version="1.0" encoding="UTF-8"?>

<!--suppress JavaFxUnresolvedFxIdReference -->

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8"
      fx:controller="ru.todo100.social.vk.controllers.UserGroupsController">
    <children>
        <SplitPane VBox.vgrow="ALWAYS">
            <items>
                <VBox spacing="10">
                    <children>
                        <TableView fx:id="groupsList" onMouseClicked="#onGroupClick">
                            <columns>
                                <TableColumn fx:id="groupIdColumn" text="ID"/>
                                <TableColumn fx:id="groupNameColumn" text="Наименование"/>
                                <TableColumn fx:id="groupCanPostedColumn" text="Можно постить?"/>
                                <TableColumn fx:id="groupMemberCount" text="Кол-во"/>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>
                        <HBox>
                            <children>
                                <Label text="Мин. кол-во участников:">
                                    <HBox.margin>
                                        <Insets left="4.0" right="4.0" top="4.0"/>
                                    </HBox.margin>
                                </Label>
                                <TextField fx:id="minMemberCount" text="0"/>
                            </children>
                            <VBox.margin>
                                <Insets bottom="5.0" top="5.0"/>
                            </VBox.margin>
                        </HBox>
                        <Button layoutX="17.0" layoutY="475.0" onAction="#leaveGroups" text="Выйти"/>
                        <ComboBox fx:id="exitBy" layoutX="4.0" layoutY="435.0" prefWidth="150.0"/>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </VBox>

                <VBox spacing="10">
                    <children>
                        <Label text="Сообщение"/>
                        <TextArea fx:id="messageArea" prefHeight="162.0"/>
                        <Label text="Прикрепить"/>
                        <TextArea fx:id="attachmentArea" prefHeight="111.0"/>
                        <Label text="Время"/>
                        <TextField fx:id="sleepTime" promptText="0" text="0"/>
                        <ComboBox fx:id="pageGroup"/>
                        <CheckBox fx:id="inVideo" mnemonicParsing="false" text="В видеозаписях"/>

                        <Button fx:id="publishButton" mnemonicParsing="false" onAction="#publish" text="Опубликовать"/>
                        <TextArea fx:id="loggerArea" editable="false"/>

                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </VBox>
            </items>
        </SplitPane>
    </children>
</VBox>
